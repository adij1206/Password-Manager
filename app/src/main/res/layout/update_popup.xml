<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="8dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:padding="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/update_popup_add_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Update Your Account Details"
                android:textSize="20sp"
                android:textAlignment="center"
                android:textStyle="italic"/>

            <TextView
                android:id="@+id/update_popup_add_item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_below="@+id/update_popup_add_title"
               android:text="Title"/>


            <EditText
                android:id="@+id/update_popup_add_item_userid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Update UserId"
                android:layout_below="@+id/update_popup_add_item_name"
                android:gravity="start|top"
                android:inputType="textMultiLine" />


            <EditText
                android:id="@+id/update_popup_add_item_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Update Password"
                android:layout_below="@+id/update_popup_add_item_userid"
                android:gravity="start|top"
                android:inputType="textMultiLine" />


            <Button
                android:id="@+id/update_popup_add_save_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Update"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_below="@id/update_popup_add_item_password"
                android:backgroundTint="@color/teal_700"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>